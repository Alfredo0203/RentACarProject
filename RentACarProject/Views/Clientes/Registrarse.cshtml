@using DAL.Models;
@model Clientes

@* Diseño *@
<link href="~/Content/Style/FormAndButtons.css" rel="stylesheet" />

<br />
<br />
<br />

@if (Model.IdCliente > 0)
{
    <br />
    <center> <h2>Editar cliente</h2> </center>
    <br />
    ViewBag.Title = "Editar";
}
else
{
    ViewBag.Title = "Agregar";
    <br />
    <center> <h2>Agregar cliente</h2> </center>
    <br />
}

<div class="container text-center" id="formulario">


    @using (Html.BeginForm())
    {
        //ID oculto de usuario
        @Html.HiddenFor(x => x.IdCliente)
        <br />
        <br />
        <div class="form-group">
            <label class="control-label"> Nombre </label>
            @Html.TextBoxFor(x => x.NombreCliente, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.NombreCliente, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Apellido </label>
            @Html.TextBoxFor(x => x.Apellido, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.Apellido, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Edad </label>
            @Html.TextBoxFor(x => x.Edad, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.Edad, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Teléfono </label>
            @Html.TextBoxFor(x => x.Telefono, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.Telefono, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Correo </label>

            @Html.TextBoxFor(x => x.Correo, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.Correo, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Contraseña </label>
            @Html.PasswordFor(x => x.Contra, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.Contra, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label"> Confirmar contraseña </label>
            @Html.PasswordFor(x => x.ConfirmarPass, htmlAttributes: new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.ConfirmarPass, null, htmlAttributes: new { @class = "text-danger" })
        </div>

        <br />
        <div class="form-group">
            <input class="btn" id="button" type="submit" value="Registrarse" />
        </div>
        <br />
        <br />
    }
</div>

