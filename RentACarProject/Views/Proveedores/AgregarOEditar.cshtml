@using DAL.Models;
@model Proveedores

<br />
<br />
<br />

<div class="container-fluid">
    <div class="row">

        @if (Model.IdProveedor > 0)
        {
            <br />
            <center> <h2>Editar proveedor</h2> </center>
            <br />
            ViewBag.Title = "Editar";
        }
        else
        {
            ViewBag.Title = "Agregar";
            <br />
            <center> <h2>Agregar proveedor</h2> </center>
            <br />
        }

        <div class="col-md-4"></div>
        <div class="col-md-4 text-center" style="background-color: #D4B499; border-radius:15px">
            <div style="align-items: center; justify-content: center; display: flex">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(x => x.IdProveedor)
                    <br />
                    <br />

                    <div class="form-group">
                        <label>Nombre </label>
                        @Html.TextBoxFor(x => x.NombreProveedor, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(x => x.NombreProveedor, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Teléfono </label>
                        @Html.TextBoxFor(x => x.telefono, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(x => x.telefono, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Dirección </label>
                        @Html.TextBoxFor(x => x.direccion, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(x => x.direccion, null, new { @class = "text-danger" })
                    </div>

                    <br />
                    <div class="form-group">
                        <input class="btn" style="background-color: #889EAF; color: #fff" type="submit" value="Guardar" />
                    </div>
                    <br />
                    <br />
                }
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
