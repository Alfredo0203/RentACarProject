@using DAL.Models;
@model Proveedores

@* Diseño *@
<link href="~/Content/Style/FormAndButtons.css" rel="stylesheet" />

<br />
<br />
<br />

@if (Model.IdProveedor > 0)
{
    <br />
    <center> <h2>Editar proveedor</h2> </center>
    <br />
    ViewBag.Title = "Editar";
}
else
{
    ViewBag.Title = "Agregar";
    <br />
    <center> <h2>Agregar proveedor</h2> </center>
    <br />
}

<div class="container text-center" id="formulario">

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.IdProveedor)
        <br />

        <div class="form-group">
            <label>Nombre </label>
            @Html.TextBoxFor(x => x.NombreProveedor, new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.NombreProveedor, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Teléfono </label>
            @Html.TextBoxFor(x => x.telefono, new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.telefono, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Dirección </label>
            @Html.TextAreaFor(x => x.direccion, new { @class = "form-control text-center" })
            @Html.ValidationMessageFor(x => x.direccion, null, new { @class = "text-danger" })
        </div>

        <br />
        <div class="form-group">
            <input class="btn" id="button" type="submit" value="Guardar" />
        </div>
        <br />
    }
</div>
