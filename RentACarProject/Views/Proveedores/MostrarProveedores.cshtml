@using DAL.Models;
@model List<Proveedores>

@{
    ViewBag.Title = "Proveedores";
}

@* Diseño *@
<link href="~/Content/Style/TableAndButtons.css" rel="stylesheet" />
<br />
<br />
<br />

<center>
    <h2>Proveedores</h2>
    <br />
    <button class="btn btn-default" onclick="window.location.href='/Proveedores/AgregarOEditar'"> Agregar </button>
</center>

<br />

<div class="container" style="display: flex; justify-content: center; align-items: center">

    <div class="row text-center">

        <table class="table table-bordered table-striped table-hover">

            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Teléfono</td>
                    <td>Dirección</td>
                    <td></td>
                </tr>
            </thead>

            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.IdProveedor</td>
                            <td>@p.NombreProveedor</td>
                            <td>@p.telefono</td>
                            <td>@p.direccion</td>
                            <td>
                                <button class="btn btn-success" onclick="window.location.href = '/Proveedores/AgregarOEditar?idProveedor='+@p.IdProveedor"> <i class="fas fa-edit"></i> </button>

                                <button class="btn btn-danger" onclick="window.location.href = '/Proveedores/Eliminar?idProveedor='+@p.IdProveedor"> <i class="fas fa-trash"></i> </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

