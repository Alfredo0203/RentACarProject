@using DAL.Models;
@model List<Proveedores>


@{
    ViewBag.Title = "Proveedores";
}

<br />
<br />
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <br />
            <center> <h2>Listado de proveedores</h2> </center>

            <button class="btn" onclick="window.location.href='/Proveedores/AgregarOEditar'" style="background-color: #506D84; color:#fff; width:60px"> <i class="fas fa-plus-circle"></i> </button>
            <br />
            <br />

            <table class="table table-bordered table-striped table-hover table-responsive" style="border-width: 0px; text-align: center">
                <thead style="background-color: #889EAF; color: #fff">
                    <tr>
                        <td>ID</td>
                        <td>Nombre</td>
                        <td>Teléfono</td>
                        <td>Dirección</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.IdProveedor</td>
                                <td>@p.NombreProveedor</td>
                                <td>@p.telefono</td>
                                <td>@p.direccion</td>
                                <td>
                                    <button class="btn btn-success" onclick="window.location.href = '/Proveedores/AgregarOEditar?idProveedor='+@p.IdProveedor" style="color: #fff; width: 60px"> <i class="fas fa-edit"></i> </button>
                                </td>
                                <td>
                                    <button class="btn btn-danger" onclick="window.location.href = '/Proveedores/Eliminar?idProveedor='+@p.IdProveedor" style="color: #fff; width: 60px"> <i class="fas fa-trash"></i> </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

