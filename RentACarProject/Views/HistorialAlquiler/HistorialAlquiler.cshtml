@using DAL.Models;
@model List<HistorialAlquiler>

@{
    ViewBag.Title = "Historial Alquiler";
}

@* Diseño *@
<link href="~/Content/Style/TableAndButtons.css" rel="stylesheet" />
<br />
<br />
<br />

<div class="container" style="display: flex; justify-content: center; align-items: center">

    <div class="row text-center">

        <table class="table table-bordered table-striped table-hover">

            <thead>
                <tr>
                    <td>ID</td>
                    <td>Cliente</td>
                    <td>Placa</td>
                    <td>Fecha inicial</td>
                    <td>Fecha entrega</td>
                    <td>Días</td>
                    <td>Averiado</td>
                    <td>Precio total</td>
                    <td>Devolver</td>
                </tr>
            </thead>

            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var h in Model)
                    {
                <tr>
                    <td>@h.IdHistorial</td>
                    <td>@h.Clientes.NombreCliente</td>
                    <td>@h.Autos.Placa</td>
                    <td>@h.FechaInicio</td>
                    <td>@h.FechaEntrega</td>
                    <td>@h.CantidadDias</td>
                    <td>@h.Averiado</td>
                    <td>@h.PrecioTotal</td>
                    <td>
                        <button class="btn btn-secondary" onclick="window.location.href = "> <i class="fas fa-undo-alt"></i> </button>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
