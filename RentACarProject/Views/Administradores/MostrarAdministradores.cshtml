@using DAL.Models;
@model List<Administradores>
@{
    ViewBag.Title = "Administradores";
}

@* Diseño *@
<link href="~/Content/Style/TableAndButtons.css" rel="stylesheet" />
<br />
<br />
<br />

<center>
    <h2>Administradores</h2>
    <br />
    <button class="btn btn-default" onclick="window.location.href='/Administradores/AddOrEdit'"> Agregar </button>
</center>

<br />

<div class="container" style="display: flex; justify-content: center; align-items: center">

    <div class="row text-center">

        <table class="table table-bordered table-striped table-hover">

            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Correo</td>
                    <td>Contraseña</td>
                    <td>Edad</td>
                    <td>Telefono</td>
                    <td>Rol</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>

            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var a in Model)
                    {
                <tr>
                    <td>@a.IdAdministrador</td>
                    <td>@a.Nombre</td>
                    <td>@a.Apellido</td>
                    <td>@a.Correo</td>
                    <td>@a.Contra</td>
                    <td>@a.Edad</td>
                    <td>@a.Telefono</td>
                    <td>@a.Rol</td>
                    <td>
                        <button class="btn btn-success" onclick="window.location.href = '/Administradores/AddOrEdit?IdAdmin='+@a.IdAdministrador"> <i class="fas fa-edit"></i></button>
                    </td>
                    <td>
                        <button class="btn btn-danger" onclick="window.location.href = '/Administradores/EliminarAdmin?IdAdmin='+@a.IdAdministrador"> <i class="fas fa-trash"></i></button>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

